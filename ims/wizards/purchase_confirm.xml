<odoo>
    <record id="view_purchase_confirm_popup" model="ir.ui.view">
        <field name="name">purchase.confirm.simple.form</field>
        <field name="model">purchase.confirm.popup</field>
        <field name="arch" type="xml">
            <form string="Confirm Purchase">
                <group>
                    <p>Do you want to create a Purchase Order for the required raw materials?</p>
                </group>
                <footer>
                    <button name="confirm" string="Yes" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
